{
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "compilerOptions": {
    "types": [
      "./types",
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "ES2017"
  }
}