{
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "ES6",
    "typeRoots": [
      "./types"
    ],
  }
}